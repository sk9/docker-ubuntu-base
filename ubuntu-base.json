{
    "variables": {
        "version": ""
    },
    "builders":[{
        "type": "docker",
        "image": "ubuntu:latest",
        "pull": true,
        "export_path": "ubuntu-base-{{user `version`}}.tar"
    }],
    "provisioners":[
        {
            "type": "shell",
            "inline": [
                "apt-add-repository ppa:rquillo/ansible -y",
                "apt-get update -y",
                "apt-get install ansible -y"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "playbooks/local.yml",
            "role_paths":[
                "roles/common"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-import",
            "repository": "deepblue/ubuntu-base",
            "tag": "{{user `version`}}"
        }
    ]
}